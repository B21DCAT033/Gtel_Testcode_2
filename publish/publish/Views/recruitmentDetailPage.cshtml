<!-- Choose Us Start -->
<div class="section techwix-choose-us-section-02 techwix-service-section-07 section-padding pb-5" style="background-image: url(/gtel_modern/images/bg/choose-us-bg2.jpg);">
    <div class="container">
        <!-- Choose Us Wrap Start -->
        <div class="choose-us-wrap">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Choose Us Left Start -->
                    <div class="choose-us-left service-content mt-0 wow fadeInLeft">
                        <div class="section-title mx-0">
                            <h2 class="title">@Umbraco.GetDictionaryValue("MoTaCongViec")</h2>
                        </div>
                        <div class="job-description">
                            @Model.JobDescription
                        </div>
                    </div>
                    <!-- Choose Us Left End -->
                </div>
            </div>
            <div class="row mt-3 mt-sm-5">
                <div class="col-sm-12">
                    <!-- Choose Us Left Start -->
                    <div class="choose-us-left service-content mt-0 wow fadeInRight">
                        <div class="section-title mx-0">
                            <h2 class="title">@Umbraco.GetDictionaryValue("YeuCauCongViec")</h2>
                        </div>
                        <div class="job-description">
                            @Model.JobRequirements
                        </div>
                    </div>
                    <!-- Choose Us Left End -->
                </div>
            </div>
            <div class="row mt-3 mt-sm-5">
                <div class="col-sm-12">
                    <!-- Choose Us Left Start -->
                    <div class="choose-us-left service-content mt-0 wow fadeInLeft">
                        <div class="section-title mx-0">
                            <h2 class="title">@Umbraco.GetDictionaryValue("QuyenLoi")</h2>
                        </div>
                        <div class="job-description">
                            @Model.Benefits
                        </div>
                    </div>
                    <!-- Choose Us Left End -->
                </div>
            </div>
        </div>
        <!-- Choose Us Wrap End -->
    </div>
</div>
<!-- Choose Us End -->

<!-- Contact Start -->
<div class="section techwix-contact-section techwix-contact-section-02 section-padding">
    <div class="container">
        <!-- Contact Wrap Start -->
        <div class="contact-wrap" style="background-image: url(/gtel_modern/images/shape/contact-shape.png);">
            <div class="row">
                <div class="col-xxl-5 col-lg-6 wow fadeInRight">
                    <!-- Contact Info Start -->
                    <div class="contact-info">
                        <ul>
                            <li>
                                <!-- Contact Info Item Start -->
                                <div class="contact-info-item d-flex align-items-center">
                                    <div class="contact-info-icon">
                                        <i class="flaticon-book-1"></i>
                                    </div>
                                    <div class="contact-info-text">
                                        <h4 class="title">@Umbraco.GetDictionaryValue("TrinhDoKinhNghiem")</h4>
                                        <p>@Model.LevelOfExperience</p>
                                    </div>
                                </div>
                                <!-- Contact Info Item End -->
                            </li>
                            <li>
                                <!-- Contact Info Item Start -->
                                <div class="contact-info-item d-flex align-items-center">
                                    <div class="contact-info-icon">
                                        <i class="flaticon-user"></i>
                                    </div>
                                    <div class="contact-info-text">
                                        <h4 class="title">@Umbraco.GetDictionaryValue("SoLuong")</h4>
                                        <p>@Model.Quantity</p>
                                    </div>
                                </div>
                                <!-- Contact Info Item End -->
                            </li>
                            <li>
                                <!-- Contact Info Item Start -->
                                <div class="contact-info-item d-flex align-items-center">
                                    <div class="contact-info-icon">
                                        <i class="flaticon-calendar"></i>
                                    </div>
                                    <div class="contact-info-text">
                                        <h4 class="title">@Umbraco.GetDictionaryValue("HanNopHoSo")</h4>
                                        <p>@(Model.ExpirationDate.ToString("dd/MM/yyyy").Equals("01/01/0001") ? Umbraco.GetDictionaryValue("VoThoiHan") : Model.ExpirationDate.ToString("dd/MM/yyyy"))</p>
                                    </div>
                                </div>
                                <!-- Contact Info Item End -->
                            </li>
                            <li>
                                <!-- Contact Info Item Start -->
                                <div class="contact-info-item d-flex align-items-center">
                                    <div class="contact-info-icon">
                                        <i class="flaticon-pin"></i>
                                    </div>
                                    <div class="contact-info-text">
                                        <h4 class="title">@Umbraco.GetDictionaryValue("DiaDiemLamViec")</h4>
                                        <p>@Model.Address</p>
                                    </div>
                                </div>
                                <!-- Contact Info Item End -->
                            </li>
                        </ul>
                    </div>
                    <!-- Contact Info End -->
                </div>
                <div class="col-xxl-7 col-lg-6 wow fadeInLeft">
                    <!-- Contact Form Start -->
                    <div class="contact-form">
                        <div class="contact-form-wrap">
                            <div class="heading-wrap text-center">
                                <h3 class="title">@Umbraco.GetDictionaryValue("ThongTinUngTuyen")</h3>
                            </div>
                            <form id="formRegister" class="form" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="jobPostingKey" value="@Model.Key" />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <!-- Single Form Start -->
                                        <div class="single-form">
                                            <input type="text" name="fullName" placeholder="@Umbraco.GetDictionaryValue("HoTen") *" required>
                                        </div>
                                        <!-- Single Form End -->
                                    </div>
                                    <div class="col-sm-6">
                                        <!-- Single Form Start -->
                                        <div class="single-form">
                                            <input type="email" name="email" placeholder="@Umbraco.GetDictionaryValue("Email") *" required>
                                        </div>
                                        <!-- Single Form End -->
                                    </div>
                                    <div class="col-sm-6">
                                        <!-- Single Form Start -->
                                        <div class="single-form">
                                            <input type="text" name="telephone" placeholder="@Umbraco.GetDictionaryValue("DienThoai") *" required>
                                        </div>
                                        <!-- Single Form End -->
                                    </div>
                                    <div class="col-sm-12">
                                        <!-- Single Form Start -->
                                        <div class="single-form">
                                            <input type="file" id="fileCV" name="file" placeholder="File" required>
                                        </div>
                                        <!-- Single Form End -->
                                    </div>
                                    <div class="col-sm-12">
                                        <!-- Single Form Start -->
                                        <div class="single-form">
                                            <input type="text" name="address" placeholder="@Umbraco.GetDictionaryValue("DiaChi") *" required>
                                        </div>
                                        <!-- Single Form End -->
                                    </div>
                                    <div class="col-sm-12">
                                        <!-- Single Form Start -->
                                        <div class="single-form">
                                            <textarea name="message" placeholder="@Umbraco.GetDictionaryValue("NoiDung_")"></textarea>
                                        </div>
                                        <!-- Single Form End -->
                                    </div>
                                    <div class="col-sm-12">
                                        <!--  Single Form Start -->
                                        <div class="form-btn">
                                            <button type="button" id="btnSendApplication" class="btn">@Umbraco.GetDictionaryValue("GuiDi")</button>
                                        </div>
                                        <!--  Single Form End -->
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Contact Form End -->
                </div>
            </div>
        </div>
        <!-- Contact Wrap End -->
    </div>
</div>
<!-- Contact End -->

<div id="popup-content" class="mfp-popup-content mfp-hide" role="alert">
    <div class="card">
        <div class="card-header text-center text-uppercase">@Umbraco.GetDictionaryValue("ThongBao")</div>
        <div class="card-body">
            <p class="notification-text text-center"></p>
        </div>
        <div class="card-footer text-center">
            <button id="btnClosePopup" type="button" class="btn">@Umbraco.GetDictionaryValue("Dong")</button>
        </div>
    </div>
</div>

@section Scripts {
    <script type="module" src="/js/recruitmentDetailPage.gtel.portal.js"></script>
}
